[module/ram]
type = custom/script
format-prefix=îŒ¢
format-prefix-foreground = ${colors.foreground-alt}
exec = echo `free -m | head -2 | tail -1 | awk '{printf("%02d",100-int($NF/$2*100))}'`% 
#click-left = ~/.config/polybar/scripts/weather.sh lindau de 
exec-if = [ `free -m | head -2 | tail -1 | awk '{print int($NF/$2*100)}'` -lt 25 ] 
interval = 5 

